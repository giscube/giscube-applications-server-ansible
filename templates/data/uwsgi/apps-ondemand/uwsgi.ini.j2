[uwsgi]
procname-prefix-spaced=/{{ group_name }}/* emperor ondemand {{ python_suffix }}

emperor = {{ emperor_path | default(group_path) }}/*/uwsgi_ondemand{{ python_suffix }}.ini
master = true
die-on-term = true
vacuum = true
touch-reload = %d/uwsgi.ini

emperor-on-demand-exec=%d/uwsgi_socket_name.sh

vassals-include-before = %d/vassals-before.ini
vassals-include = %d/vassals-after.ini
